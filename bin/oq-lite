#!/usr/bin/env python

import logging
from openquake.commonlib import oqvalidation, sap, __version__
from openquake.lite.commands import run, info, check


if __name__ == '__main__':
    # hack: disable a check that does not make sense for the engine lite
    oqvalidation.OqParam.is_valid_hazard_calculation_and_output = \
        lambda self: True

    parser = sap.compose([check.parser, run.parser, info.parser],
                         version=__version__)
    try:
        parser.callfunc()
    except NotImplemented:
        print 'Sorry, not implemented yet'
