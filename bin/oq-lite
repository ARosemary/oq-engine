from openquake.commonlib import sap, __version__
from openquake.commonlib.commands import run, info, check


if __name__ == '__main__':
    version = map(int, __version__.split('.'))
    if version < [0, 2, 0]:
        raise RuntimeError(
            'You have an old version of commonlib: ' + __version__)

    parser = sap.compose([check.parser, run.parser, info.parser],
                         version=__version__)
    try:
        parser.callfunc()
    except NotImplementedError as exc:
        print 'Sorry, not implemented yet: %s' % exc
        raise
