#!/bin/bash
# -*- coding: utf-8 -*-
# vim: tabstop=4 shiftwidth=4 softtabstop=4

bold=`tput bold`
normal=`tput sgr0`

echo ''
echo "!! ${bold}Command 'openquake' has been replaced by 'oq-engine'${normal}"
echo '!!'
echo '!! For an exhaustive list of changes see:'
echo -e "!! \t*  https://github.com/gem/oq-engine/wiki/Incompatible-changes-between-OpenQuake-1.0-and-2.0"
echo -e "!! \t*  https://github.com/gem/oq-engine/wiki/What's-new-in-OpenQuake-2.0"
echo ''
echo 'Please run: oq-engine '$*
echo ''

# FIXME exit for test purpose
exit 1
