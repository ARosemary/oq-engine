                <value iml="9" poe="0.00" />
                <value iml="10" poe="0.27" />
                <value iml="11" poe="0.88" />
            </ffd>
            <ffd ls="collapse">
                <value iml="7" poe="0.0" />
                <value iml="8" poe="0.0" />
                <value iml="9" poe="0.01" />
                <value iml="10" poe="0.03" />
                <value iml="11" poe="0.62" />
            </ffd>
        </ffs>
    </fragilityModel>
</nrml>
