<?xml version='1.0' encoding='utf-8'?>
<nrml xmlns:gml="http://www.opengis.net/gml"
      xmlns="http://openquake.org/xmlns/nrml/0.3"
      gml:id="n1">

    <!-- sourceModel is a gml:Feature -->
    <sourceModel gml:id="sm1">
        <config/>

        <!-- areaSource is a gml:Feature -->
        <areaSource gml:id="src03">
            <gml:name>Quito</gml:name>

            <tectonicRegion>Active Shallow Crust</tectonicRegion>

            <!-- this is the geospatial property, of type gml:SurfacePropertyType -->
            <areaBoundary>
                <gml:Polygon>
                    <gml:exterior>
                        <gml:LinearRing srsName="urn:ogc:def:crs:EPSG::4326">
                            <gml:posList>
                             -122.5 37.5
                             -121.5 37.5
                             -121.5 38.5
                             -122.5 38.5
                            </gml:posList>
                        </gml:LinearRing>
                    </gml:exterior>
                </gml:Polygon>
            </areaBoundary>

            <ruptureRateModel>
                <truncatedGutenbergRichter type="ML">
                    <aValueCumulative>5.0</aValueCumulative>
                    <bValue>0.8</bValue>
                    <minMagnitude>5.0</minMagnitude>
                    <maxMagnitude>7.0</maxMagnitude>
                </truncatedGutenbergRichter>

                <nodalPlaneDistribution>
                    <nodalPlane probability="0.3">
                        <strike>0.0</strike>
                        <dip>90.0</dip>
                        <rake>0.0</rake>
                    </nodalPlane>
                    <nodalPlane probability="0.7">
                        <strike>90.0</strike>
                        <dip>45.0</dip>
                        <rake>90.0</rake>
                    </nodalPlane>
                </nodalPlaneDistribution>
            </ruptureRateModel>

            <ruptureDepthDistribution>
                <magnitude type="ML">6.0 6.5 7.0</magnitude>
                <depth>5000.0 3000.0 0.0</depth>
            </ruptureDepthDistribution>

            <hypocenterDistribution>
                <hypocenter probability="0.5" depth="4.0" />
                <hypocenter probability="0.5" depth="8.0" />
            </hypocenterDistribution>

            <!-- TODO(larsbutler): do we get rid of this? -->
            <hypocentralDepth>5000.0</hypocentralDepth>
        </areaSource>
    </sourceModel>
</nrml>
