<?xml version='1.0' encoding='utf-8'?>
<nrml xmlns:gml="http://www.opengis.net/gml"
      xmlns="http://openquake.org/xmlns/nrml/0.3"
      gml:id="n1">

    <sourceModel id="optional" name="Source model for the Foo region">

        <!-- Note: Area sources are identical to point sources, except for the geometry. -->
        <areaSource id="optional" name="Quito">
            <tectonicRegion>Active Shallow Crust</tectonicRegion>

            <areaGeometry>
                <gml:Polygon>
                    <gml:exterior>
                        <gml:LinearRing srsName="urn:ogc:def:crs:EPSG::4326">
                            <gml:posList>
                             -122.5 37.5
                             -121.5 37.5
                             -121.5 38.5
                             -122.5 38.5
                            </gml:posList>
                        </gml:LinearRing>
                    </gml:exterior>
                </gml:Polygon>
            </areaGeometry>

            <magnitudeScalingRelationship>PeerMSR</magnitudeScalingRelationship>
            <ruptureAspectRatio>1.5</ruptureAspectRatio>

            <upperSeismogenicDepth>0.0</upperSeismogenicDepth>
            <lowerSeismogenicDepth>10.0</lowerSeismogenicDepth>

            <evenlyDiscretizedIncrementalMFD minMag="6.55" binSize="0.1" type="ML">
                <occurrenceRates>0.0010614989 8.8291627E-4 7.3437777E-4 6.108288E-4 5.080653E-4</occurrenceRates>
            </evenlyDiscretizedIncrementalMFD>

            <nodalPlaneDistribution>
                <nodalPlane probability="0.3" strike="0.0" dip="90.0" rake="0.0" />
                <nodalPlane probability="0.7" strike="90.0" dip="45.0" rake="90.0" />
            </nodalPlaneDistribution>

            <ruptureDepthDistribution type="ML">
                <rupture magnitude="6.0" depth="5000.0" />
                <rupture magnitude="6.5" depth="3000.0" />
                <rupture magnitude="7.0" depth="0.0" />
            </ruptureDepthDistribution>

            <hypocenterDistribution>
                <hypocenter probability="0.5" depth="4.0" />
                <hypocenter probability="0.5" depth="8.0" />
            </hypocenterDistribution>

        </areaSource>

    </sourceModel>
</nrml>
