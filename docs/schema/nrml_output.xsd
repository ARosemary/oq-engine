<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://opengem.org/xmlns/shaml/0.1"
	xmlns:shaml="http://opengem.org/xmlns/shaml/0.1" xmlns:gml="http://www.opengis.net/gml/profile/sfgml/1.0" elementFormDefault="qualified">

	<!-- import -->
	<xs:import namespace="http://www.opengis.net/gml/profile/sfgml/1.0"
	    schemaLocation="./GML-SimpleFeaturesProfileSchema.xsd"/>
		<!-- schemaLocation="./gml.xsd"/> -->
	<xs:include schemaLocation="nrml_common.xsd"/>
	
	<!-- Hazard shakemap definition -->
	<xs:complexType name="RuptureForecastType">
		<xs:annotation>
			<xs:documentation>Describe an earthquake event (for the moment a point source)</xs:documentation>
		</xs:annotation>
		<xs:all>
			<xs:element name="source" type="gml:PointType"/>
		</xs:all>
		<xs:attribute name="averageRake" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:double">
					<xs:minInclusive fixed="true" value="0.0"/>
					<xs:maxInclusive fixed="true" value="360.0"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="magnitude" use="required" type="xs:double"/>
	</xs:complexType>
	
	<xs:simpleType name="IMT">
		<xs:annotation>
			<xs:documentation>Describe the valid IMT values</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value="PGA"/>
			<xs:enumeration value="PGD"/>
			<xs:enumeration value="PGV"/>
			<xs:enumeration value="MMI"/>
			<xs:enumeration value="SA"/>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="GroundMotionValue">
		<xs:annotation>
			<xs:documentation>Describe a ground motion value</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:double"/>
	</xs:simpleType>
	
	<xs:simpleType name="vs30Method">
		<xs:restriction base="xs:string"/>
	</xs:simpleType>
	
	<!-- Type of equation seems missing in the config file defined in OpenSHA -->
	<xs:complexType name="IMRDataType">
		<xs:annotation>
			<xs:documentation>Describe the IMR related information</xs:documentation>
		</xs:annotation>
		<xs:attribute name="IMT" use="required" type="shaml:IMT"/>
		<xs:attribute name="component" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:string">
					<xs:enumeration value="Average Horizontal"/>
					<xs:enumeration value="GMRotI50"/>
					<xs:enumeration value="Random Horizontal"/>
					<xs:enumeration value="Greater of Two Horz"/>
					<xs:enumeration value="Vertical"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="period" use="required" type="xs:double"/>
		<xs:attribute name="damping" use="required" type="xs:double"/>
		<xs:attribute name="truncationType" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:string">
					<xs:enumeration value="None"/>
					<xs:enumeration value="1 Sided"/>
					<xs:enumeration value="2 Sided"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="truncationLevel" use="required" type="xs:int"/>
		<xs:attribute name="stdDevType" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:string">
					<xs:enumeration value="Total"/>
					<xs:enumeration value="Inter-Event"/>
					<xs:enumeration value="Intra-Event"/>
					<xs:enumeration value="None"/>
					<xs:enumeration value="Total (Mag Dependent)"/>
					<xs:enumeration value="Total (PGA Dependent)"/>
					<xs:enumeration value="Total"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="vs30" use="required" type="shaml:vs30Method"/>
	</xs:complexType>
	
	<xs:complexType name="HazardGroundMotionSiteType">
		<xs:annotation>
			<xs:documentation>Describe a ground motion value for a single site</xs:documentation>
		</xs:annotation>
		<xs:all>
			<xs:element name="site" type="gml:PointType"/>
		</xs:all>
		<xs:attribute name="groundMotion" use="required" type="shaml:GroundMotionValue"/>
	</xs:complexType>
	
	<xs:complexType name="HazardGroundMotionFieldType">
		<xs:annotation>
			<xs:documentation>Describe a ground motion field (ground motion values for a set of sites)</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element maxOccurs="unbounded" name="site" type="shaml:HazardGroundMotionSiteType"/>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="HazardShakeMapType">
		<xs:annotation>
			<xs:documentation>Describe an hazard shake map</xs:documentation>
		</xs:annotation>
		<xs:all>
			<xs:element name="event" type="shaml:RuptureForecastType"/>
			<xs:element name="IMR" type="shaml:IMRDataType"/>
			<xs:element name="field" type="shaml:HazardGroundMotionFieldType"/>
		</xs:all>
	</xs:complexType>
	
	<xs:complexType name="HazardCurveListType">
		<xs:all>
			<xs:element name="IML" type="gml:doubleList"/>
			<xs:element name="List">
				<xs:complexType>
					<xs:sequence maxOccurs="unbounded">
						<xs:element name="Curve" type="shaml:HazardCurveType" maxOccurs="1"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:all>
	</xs:complexType>
	<xs:complexType name="HazardCurveType">
		<xs:all>
			<xs:element name="Site" type="shaml:SiteDataType"/>
		</xs:all>
		<xs:attribute name="minProb">
			<xs:simpleType>
				<xs:restriction base="xs:double">
					<xs:minInclusive fixed="true" value="0"/>
					<xs:maxInclusive fixed="true" value="1"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="maxProb">
			<xs:simpleType>
				<xs:restriction base="xs:double">
					<xs:minInclusive fixed="true" value="0"/>
					<xs:maxInclusive fixed="true" value="1"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
	</xs:complexType>
	<xs:complexType name="HazardResultType">
		<xs:all>
			<xs:element name="Descriptor">
				<xs:complexType>
					<xs:choice>
						<xs:element name="endBranchLabel" type="xs:string"/>
						<xs:element name="aggregationType">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="mean"/>
									<xs:enumeration value="median"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
					</xs:choice>
				</xs:complexType>
			</xs:element>
			<xs:element name="Values">
				<xs:complexType>
					<xs:choice>
						<xs:element maxOccurs="unbounded" name="HazardCurveList"
							type="shaml:HazardCurveListType"/>
						<xs:element name="HazardMap" type="shaml:HazardMapType"/>
						<xs:element name="HazardShakeMap" type="shaml:HazardShakeMapType"/>
					</xs:choice>
				</xs:complexType>
			</xs:element>
		</xs:all>
		<xs:attribute name="calcSettingsID" type="xs:string"/>
		<xs:attribute name="IMT" use="required" type="shaml:IMT"/>
		<xs:attribute name="saPeriod" type="xs:double"/>
		<xs:attribute name="saDamping" type="xs:double"/>
		<xs:attribute name="IDmodel" type="xs:string" use="required"/>
		<xs:attribute name="timeSpanDuration" use="required">
			<xs:simpleType>
				<xs:restriction base="xs:double">
					<xs:minInclusive value="0"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
	</xs:complexType>
	<xs:complexType name="HazardResultListType">
		<xs:sequence maxOccurs="unbounded">
			<xs:element name="Result" type="shaml:HazardResultType"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="HazardMapType">
		<xs:sequence maxOccurs="unbounded">
			<xs:element name="Site" type="shaml:SiteDataType"/>
		</xs:sequence>
		<xs:attribute name="exceedanceProb">
			<xs:simpleType>
				<xs:restriction base="xs:double">
					<xs:minInclusive fixed="true" value="0.0"/>
					<xs:maxInclusive fixed="true" value="1.0"/>
				</xs:restriction>
			</xs:simpleType>
		</xs:attribute>
		<xs:attribute name="fixedGMLevel" type="xs:double"/>
	</xs:complexType>
	<xs:complexType name="SiteDataType">
		<xs:all>
			<xs:element name="Site" type="gml:PointType"/>
			<xs:element name="Values" type="gml:doubleList"/>
			<xs:element name="vs30" type="xs:double"/>
		</xs:all>
	</xs:complexType>
	<xs:element name="HazardResultList" type="shaml:HazardResultListType"/>
	<xs:complexType name="CurveType">
		<xs:all>
			<xs:element name="Values" type="gml:doubleList"/>
			<xs:element minOccurs="0" ref="gml:pos"/>
		</xs:all>
	</xs:complexType>
	<xs:element name="Curve" type="shaml:CurveType"/>
	<xs:element name="LossCurve" type="shaml:CurveType"/>
	<xs:element name="LossCurvePE" type="shaml:CurveType"/>
	<xs:element name="LossRatioCurve" type="shaml:CurveType"/>
	<xs:complexType name="CurveListType">
		<xs:sequence minOccurs="0" maxOccurs="unbounded">
    			<xs:choice>
    				<xs:element ref="shaml:Curve"/>
    				<xs:element ref="shaml:LossCurve"/>
    				<xs:element ref="shaml:LossRatioCurve"/>
    			</xs:choice>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="LossCurveList" type="shaml:CurveListType"/>
	<xs:element name="LossRatioCurveList" type="shaml:CurveListType"/>
	<xs:element name="RiskResult">
		<xs:complexType>
		    <xs:sequence minOccurs="1">
    		    <xs:element name="Config"/>
    			<xs:choice>
    				<xs:element ref="shaml:LossCurveList"/>
    				<xs:element ref="shaml:LossRatioCurveList"/>
    			</xs:choice>
    			<xs:choice>
    	            <xs:element name="LossCurvePE" type="shaml:CurveType"/>
    	            <xs:element name="LossRatioCurvePE" type="shaml:CurveType"/>
    			</xs:choice>
    		</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
